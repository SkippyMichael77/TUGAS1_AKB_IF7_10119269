<?xml version="1.0" encoding="utf-8"?>

<!-- 21 April 2022, 10119269, Zuhair Rasyid Wafi, IF7 -->

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProfileActivity">

    <ImageView
        android:id="@+id/ivProfile"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:padding="5dp"
        android:src="@drawable/fotoprofil"/>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivProfile"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Zuhair Rasyid Wafi"
        android:textSize="22sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/tvKelas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="10119269 - IF7"
        android:textSize="18sp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/tvDeskripsi"
        android:paddingTop="20dp"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvKelas"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="Nama saya Zuhair Rasyid Wafi, asal saya dari Cimahi, saya merupakan Mahasiswa Informatika Unikom angkatan 2019."
        android:textSize="15sp"/>

</RelativeLayout>
